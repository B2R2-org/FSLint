{
  "name": "fslint",
  "displayName": "FSLint",
  "description": "F# Linter with real-time diagnostics",
  "version": "1.0.0",
  "publisher": "fslint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fslint/fslint"
  },
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:fsharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "FSLint",
      "properties": {
        "fslint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable FSLint"
        },
        "fslint.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace LSP communication"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}

